{
  "manifest_version": 3,
  "name": "Tab URL Saver",
  "version": "1.0",
  "description": "開いている全てのタブのURLとタイトルをテキストファイルに保存する拡張機能",
  "permissions": [
    "tabs",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save Tab URLs"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}